<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <masterLabel>Accelerator ID Graph</masterLabel>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="title" 
                type="String" 
                label="Title to display"
                required="true"
                default="Customer360" 
            />
            <property name="apiUrl" 
                type="String" 
                label="URL for API call"
                required="true"
                default="https://salesforce-exp-api.cloudhub.io/api/customers/{id}/externalIds" 
            />
            <property name="icon" 
                type="String" 
                label="Icon to display" 
                default="standard:customer_360" 
                required="true"
            />
            <property name="lookupField"
                type="String"
                label="Field for API Lookup"
                required="true"
                default="Account.Global_Customer_Id__c"
            />
            <property name="imageName"
                type="String"
                label="Image Id for center icon"
                required="true"
                default="account"
            />
            <property name="labelName"
                type="String"
                label="Label for center icon"
                required="true"
                default="Customer"
            />
            <property name="showLabels"
                type="Boolean"
                label="Show labels for icons"
                required="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
